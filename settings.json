{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment": "Claude Code hooks for automatic agent telemetry - no manual logging needed in agents",

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'CLAUDE_HOOK_EVENT=PreToolUse \"/Users/ivanbernatovic/Projects/bf-github/.claude/hooks/telemetry.sh\"'"
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'CLAUDE_HOOK_EVENT=PostToolUse \"/Users/ivanbernatovic/Projects/bf-github/.claude/hooks/telemetry.sh\"'"
          }
        ]
      }
    ],

    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'CLAUDE_HOOK_EVENT=SubagentStop \"/Users/ivanbernatovic/Projects/bf-github/.claude/hooks/telemetry.sh\"'"
          }
        ]
      }
    ],

    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'CLAUDE_HOOK_EVENT=Stop \"/Users/ivanbernatovic/Projects/bf-github/.claude/hooks/telemetry.sh\"'"
          }
        ]
      }
    ]
  }
}
